@import colors

.story_bookmark
	width 100%
	margin-top 400px
	background-color #f0f0f0
	border-radius 0 100px 100px 0
	box-shadow 10px 10px 20px rgba(0,0,0,0.2)
	position relative
	.introduction, img
		float left
		height 200px
		overflow hidden
	img
		width 200px
		height 200px
	.introduction
		padding 15px 20px 
		.author
			font-size 40px
			color gray
		.title
			font-size 44px
			font-weight bolder
			color black
	.player
		position absolute
		right 0px
		top 0px
		width 200px
		height 200px
